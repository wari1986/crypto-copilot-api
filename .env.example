ENV=dev
API_PORT=8000
LOG_LEVEL=INFO

# Database
# - Local docker-compose default:
#   postgresql+asyncpg://postgres:postgres@localhost:5432/crypto_copilot
# - If unset/invalid in local env, use this safe default for smoke tests.
# - For local Postgres, replace with:
#   postgresql+asyncpg://postgres:postgres@localhost:5432/crypto_copilot
DATABASE_URL=sqlite+aiosqlite:///:memory:

# CCXT
CCXT_RATE_LIMIT=true

# Bybit (optional; left in place but not the focus)
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=true

# OpenAI (used for LLM decisions / summarization)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
OPENAI_TIMEOUT_SECONDS=60

# DEX / on-chain providers (one per chain)
ETHEREUM_RPC_URL=
BASE_RPC_URL=
ARBITRUM_RPC_URL=

# Solana
SOLANA_RPC_URL=

# Workers (off by default)
ENABLE_MARKET_DATA_TASKS=false
ENABLE_BACKFILL_ON_STARTUP=false
